# SGIP Real Estate Environment Variables
# Port Range: 43xx (4300-4309)
# Copy this file to .env and configure your values

# ============================================
# Port Configuration (43xx Range)
# ============================================
# Main Service Port (used in container)
PORT=4300

# Blue/Green Deployment Ports
PORT_BLUE=4300
PORT_GREEN=4301

# Reserved for future expansion: 4302-4309

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production

# Database Configuration (Shared database-server)
DATABASE_URL=postgresql://dbadmin:your_database_password_here@db-server-postgres:5432/sgiprealestate

# Site URL
NEXT_PUBLIC_SITE_URL=https://sgiprealestate.com

# ============================================
# Shared Microservices Configuration
# ============================================
# Logging Microservice
LOGGING_SERVICE_URL=http://logging-microservice:3367

# Notifications Microservice (if needed)
NOTIFICATIONS_SERVICE_URL=http://notifications-microservice:3368
