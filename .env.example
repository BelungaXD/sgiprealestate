# ============================================================================
# SGIP Real Estate - Environment Variables Template
# Copy this file to .env.local and fill in your values
# ============================================================================

# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database (PostgreSQL)
# For local development, you can use Docker or local PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/sgiprealestate?schema=public

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
ADMIN_EMAIL=admin@sgiprealestate.com

# Security (Cloudflare Turnstile)
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Analytics
NEXT_PUBLIC_GTM_ID=

# Communication
NEXT_PUBLIC_WHATSAPP_NUMBER=
NEXT_PUBLIC_TELEGRAM_USERNAME=

# Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Integrations
GOOGLE_SHEETS_WEBHOOK_URL=
AMOCRM_WEBHOOK_URL=
AMOCRM_API_KEY=
BITRIX_WEBHOOK_URL=

# Logging (optional)
LOGGING_SERVICE_URL=http://localhost:3367
